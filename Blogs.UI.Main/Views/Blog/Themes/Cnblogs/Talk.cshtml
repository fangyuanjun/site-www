@model Blogs.UI.Main.ViewModel.TalkViewModel
@{
    Layout = "~/Views/Blog/Themes/cnblogs/Shared/_Layout.cshtml";
}

<link href="http://static.kecq.com/style/talk/talk.css" rel="stylesheet" />
<div class="container wrapper">
    <div class="inner_content">
        <div class="moodlist">
            <h1 class="t_nav"><span>删删写写，回回忆忆，虽无法行云流水，却也可碎言碎语。</span></h1>
            <div class="bloglist">
                @foreach (var item in Model.TalkCollection)
                {
                    <ul class="arrow_box">
                        <li>
                            <div class="sy">
                                <p>
                                    @if (String.IsNullOrEmpty(item.Pic))
                                    {
                                        <img src="@item.Pic" />
                                    }

                                    @Html.Raw(item.TalkContent)
                                </p>
                            </div>
                            <span class="dateview">@item.TalkDatetime.ToString("yyyy-MM-dd")</span>
                        </li>

                    </ul>
                }
            </div>
         
        </div>

    </div>
</div>
