<script type="text/javascript">
    var editor1;
    KindEditor.ready(function (K) {
        editor1 = K.create('#commentContent', {
            uploadJson: '',
            allowFileManager: false,
            items: ['emoticons',
                '|', 'justifyleft', 'justifycenter', 'justifyright', 'justifyfull',
                '|', 'fontname', 'fontsize',
