@{
    Blogs.UI.Main.ViewModel.SharedViewModel Model = (Blogs.UI.Main.ViewModel.SharedViewModel)this.Model;
}

<!-- Default -->
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>@Model.Title</title>
    <meta name="keywords" content="@Model.Keywords" />
    <meta name="description" content="@Model.Description" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="http://static.kecq.com/style/bootstrap-3.3.5/css/bootstrap.min.css" rel="stylesheet" />
</head>

<body>

    <!-- 导航条开始 -->
    <div class="navbar navbar-default navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                </button>
               
                <h3>
                    <a href="/">@Model.Blog.blogTitle</a>
                </h3>
                @*<a href="@Model.BlogUrl"><img src="@Model.Blog.blogLogo" style="height:50px" alt="比较笨的资源网" /></a>*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    @foreach (var v in Model.Menus)
                    {
                        string active = "";
                        if (v.IsActive)
                        {
                            active = "active";
                        }
                        <li class="@active">
                            <a target="@v.menuTarget" href="@v.Url">@v.menuDisplay</a>
                        </li>
                    }
                </ul>

                @*<form class="navbar-form navbar-right" role="search">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="标题">
                    </div>
                    <button type="submit" class="btn btn-default">搜索</button>
                </form>*@
            </div>
        </div>
    </div>
    <!-- 导航条结束 -->

    <!--page-->

    @RenderBody()

    <div style="height:100px;"></div>

    <footer class="footer navbar-inverse">
        <div class="container" style="height:100px">
            <p class="text-center" style="margin-top:40px; color:#23527c">
                Copyright
                &copy;
                <script type="text/javascript">
                    //<![CDATA[
                    var d = new Date()
                    document.write(d.getFullYear())
                    //]]>
                </script>
                - All Rights Reserved :
                <a href="@Model.BlogUrl">@Model.Blog.blogTitle</a>&nbsp;
                <a href="/Rss" target="_blank">Rss</a>&nbsp;
                <a href="javascript:;">QQ群:@Model.Blog.QQGroup</a>&nbsp;
                <a href="@Model.BlogUrl@("")/sitemap.html" target="_blank">站点地图</a>&nbsp;
            </p>

        </div>
    </footer>

    <script src="http://static.kecq.com/js/jquery-1.12.4.min.js"></script>
    @RenderSection("SectionFooter", false)

    @(new HtmlString(Model.TongjiHtml))
</body>
</html>